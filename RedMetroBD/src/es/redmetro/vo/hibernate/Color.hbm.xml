<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">

<hibernate-mapping package="es.redmetro.vo">
    <class name="Color" table="T_COLOR">
        <id name="codigoColor" type="java.lang.Integer" column="cod_color">
            <generator class="increment" />
        </id>
        
        <property name="nombreColor" column="nombre_color" type="java.lang.String" length="100" not-null="true" />
        <property name="codigoHexadecimal" column="cod_hexadecimal" type="java.lang.String" length="7"/>
        

    </class>
</hibernate-mapping>